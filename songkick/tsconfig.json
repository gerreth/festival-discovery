{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es6"],
    "baseUrl": ".",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es6",
    "watch": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*"]
}
